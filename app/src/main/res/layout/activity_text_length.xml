<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="22dp"
    tools:context=".apps.TextLength">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Enter a string: "/>

        <EditText
            android:id="@+id/enter_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_start_color"
            android:padding="5dp"
            android:hint="Type here"/>
        
        <Button
            android:id="@+id/btn_calculator_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Calculate Length"/>

        <TextView
            android:id="@+id/show_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Length of the string: "
            android:textSize="23dp"
            android:layout_marginTop="40dp"/>
        
    </LinearLayout>

</RelativeLayout>