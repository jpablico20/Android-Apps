<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <Button
                android:id="@+id/btn_displayhelloworld"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Display Hello World"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_showhellobutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Hello Button"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_displayname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Display Name"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_counter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Counter +"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_simpleform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simple Form"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_currency_converter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Currency Converter"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_user_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Age"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_user_greeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Greeting"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_calculator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculator"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_text_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text Length"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_even_odd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Even Odd Checker"/>

            <Button
                android:id="@+id/btn_word_reverser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Word Reverser"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Show Username"/>

            <Button
                android:id="@+id/btn_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Show Date"/>

            <Button
                android:id="@+id/btn_multiplication_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Multplication Table"/>

            <Button
                android:id="@+id/btn_simple_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simple Login"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_fahrenheit_celsius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Fahrenheit to Celsius"/>

            <Button
                android:id="@+id/btn_bookmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Bookmark List"/>

            <Button
                android:id="@+id/btn_character_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Character Counter"/>

            <Button
                android:id="@+id/btn_palindrome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Palindrome Checker"/>

            <Button
                android:id="@+id/btn_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Temperature Checker"/>

            <Button
                android:id="@+id/btn_shopping_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Shopping List"/>

            <Button
                android:id="@+id/btn_factorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Factorial Calculator"/>

            <Button
                android:id="@+id/btn_todo_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Todo Manager"/>

            <Button
                android:id="@+id/btn_guess_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Guess Number Game"/>

            <Button
                android:id="@+id/btn_word_counter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Word Counter"/>

            <Button
                android:id="@+id/btn_random_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Random Number Generator"/>

            <Button
                android:id="@+id/btn_multiple_checker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Multiple Checker"/>

            <Button
                android:id="@+id/btn_uppercase_converter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Uppercase Converter"/>

            <Button
                android:id="@+id/btn_shuffle_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Word Shuffler"/>

            <Button
                android:id="@+id/btn_bmi_solver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="BMI solver"/>

            <Button
                android:id="@+id/btn_username_valid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Username Validator"/>

            <Button
                android:id="@+id/btn_simple_interest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Simple Interest Calculator"/>

            <Button
                android:id="@+id/btn_compound_interest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Compound Interest Calculator"/>

            <Button
                android:id="@+id/btn_fibo_generator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Fibonacci Generator"/>

            <Button
                android:id="@+id/btn_odd_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Odd Sum Calculator"/>

            <Button
                android:id="@+id/btn_currency_formatter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Currency Formatter"/>

            <Button
                android:id="@+id/btn_random_qoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Random Qoute Display"/>

            <Button
                android:id="@+id/btn_upper_greeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Uppercase Greeting"/>

            <Button
                android:id="@+id/btn_check_divisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Divisible Checker"/>

            <Button
                android:id="@+id/btn_generate_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Generate Random Color"/>

            <Button
                android:id="@+id/btn_new_qoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Qoute of the Day"/>

            <Button
                android:id="@+id/btn_image_carousel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Image Carousel"/>

            <Button
                android:id="@+id/btn_stopwatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Stopwatch"/>

            <Button
                android:id="@+id/btn_password_checker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Password Strength Checker"/>

            <Button
                android:id="@+id/btn_quiz_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Quiz Game"/>

            <Button
                android:id="@+id/btn_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Timer"/>

            <Button
                android:id="@+id/btn_color_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Color Picker"/>

            <Button
                android:id="@+id/btn_weather_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Weather Widget"/>

            <Button
                android:id="@+id/btn_mood_tracker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Mood Tracker"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>